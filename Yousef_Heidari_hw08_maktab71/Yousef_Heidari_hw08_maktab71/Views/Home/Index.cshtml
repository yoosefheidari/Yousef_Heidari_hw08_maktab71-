@model List<Person>
@{
            int counter = 1;
        }
<table class="table table-striped table-hover">
    <thead>
        <th>Number</th>
        <th>Id</th>
        <th>Name</th>
        <th>Delete</th>
        <th>Edit</th>
    </thead>
    <tbody>
        
        @foreach(var person in Model)
        {
            <tr>
                <td>@counter</td>
                <td>@person.Id</td>
                <td>@person.Name</td>
                <td><a type="button" class="btn btn-outline-danger" asp-controller="Home" asp-action="Delete" asp-route-id=@person.Id>Delete</a></td>
                <td><a type="button" class="btn btn-outline-success" asp-controller="Home" asp-action="Edit" asp-route-id=@person.Id>Edit</a></td>
            </tr>
            counter++;
        }
    </tbody>

</table>